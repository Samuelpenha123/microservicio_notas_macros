                    },
                    "content": {
                        "description": "Content",
                        "type": "string"
                    },
                    "scope": {
                        "description": "Scope (global/personal)",
                        "type": "string"
                    },
                    "category": {
                        "description": "Category",
                        "type": "string"
                    },
                    "created_by": {
                        "description": "Created By Agent ID",
                        "type": "integer",
                        "format": "int64"
                    },
                    "created_by_name": {
                        "description": "Created By Name",
                        "type": "string"
                    },
                    "created_at": {
                        "description": "Created At",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "Updated At",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        }
