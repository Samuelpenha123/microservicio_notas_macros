                    },
                    "ticket_code": {
                        "description": "Ticket Code",
                        "type": "string"
                    },
                    "agent_id": {
                        "description": "Agent ID",
                        "type": "integer",
                        "format": "int64"
                    },
                    "agent_name": {
                        "description": "Agent Name",
                        "type": "string"
                    },
                    "content": {
                        "description": "Content",
                        "type": "string"
                    },
                    "is_important": {
                        "description": "Is Important",
                        "type": "boolean"
                    },
                    "created_at": {
                        "description": "Created At",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "Updated At",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Macro": {
                "required": [
                    "name",
                    "content",
                    "scope",
                    "created_by"
